<openerp>
    <data>
        <record id="account_invoice_confirm_view" model="ir.ui.view">
            <field name="name">Selected payslips to report</field>
            <field name="model">hr.payslip.export.excel</field>
            <field name="arch" type="xml">
                <form string="Export in excel this">
                    <field name="hide" readonly="1" invisible="1"/>
                    <p attrs ="{'invisible': [('hide','=',False)]}">Here is the exported client bank file:
                        <field name="mdata" readonly="1" filename="fname"/>
                    </p>
                    <field name="line_ids">
                        <tree editable="top" create="false" delete="false">
                            <field name="name"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <p attrs ="{'invisible': [('hide','=',True)]}">Press Make file button:</p>
                    <footer>
                        <button name="open_website_url" string="Make file" type="object" class="btn-primary" attrs ="{'invisible': [('hide','=',True)]}" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="export_excel"
                    multi="True"
                    key2="client_action_multi"
                    name="Export Payslips in Excel"
                    res_model="hr.payslip.export.excel"
                    src_model="hr.payslip"
                    view_mode="form"
                    target="new"
                    view_type="form"/>
    </data>
</openerp>
